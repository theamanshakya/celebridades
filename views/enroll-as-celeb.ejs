<%- include ("./partials/header") ; %>

<section>
    <div class="enroll-as-celebs">
        <div class="celebs-form w-60">
            <form action="/enroll-as-celebs" method="POST">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="Name">Name* :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="Name" name="name" placeholder="Enter Full Name">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="Email">Email* :</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="Email" name="username" placeholder="Enter Email">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="password">Create Your Password* :</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="phone-no">Phone Number* :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="phone-no" name="phoneNo" placeholder="Enter Phone Number">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="handle">Your handle* :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="handle" name="handle" placeholder="@Celebze">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="followers">How many followers do you have :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id='followers' name=followers placeholder="400k">                    
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="followers">Upload your Profie photo :</label>
                    
                     <div class="col-sm-8">
                    
                        <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm w-60 profile-photo">
                          <input id="upload" type="file" name="profilePhoto" onchange="readURL(this);" class="form-control border-0">
                          <label id="upload-label" type="file" class="font-weight-light text-muted">Choose file</label>
                          <div class="input-group-append">
                              <label for="upload" for="upload" onchange="readURL(this);" class="btn btn-light m-0 rounded-pill px-4"> <i class="fa fa-cloud-upload mr-2 text-muted"></i><small class="text-uppercase font-weight-bold text-muted">Choose file</small></label>
                          </div>
                        </div>
                    
                    
                      </div>
                  </div>

                 <div class="d-block m-auto">
                    <button type="submit" class="btn">Verify my Email id/Mobile Number </button>
                 </div>
            
            </form>
        </div>
    </div>

</section>




<script>
  var input = document.getElementById( 'upload' );
var infoArea = document.getElementById( 'upload-label' );

input.addEventListener( 'change', showFileName );
function showFileName( event ) {
  var input = event.srcElement;
  var fileName = input.files[0].name;
  infoArea.textContent = 'File name: ' + fileName;
}
</script>



